---
import ReactIcon from "../assets/icons/ReactIcon.astro";
import ExpressIcon from "../assets/icons/ExpressIcon.astro";
import NestIcon from "../assets/icons/NestIcon.astro";
import DjangoIcon from "../assets/icons/DjangoIcon.astro";
import FastIcon from "../assets/icons/FastIcon.astro";
import LaravelIcon from "../assets/icons/LaravelIcon.astro";

const frameworks = [
  {
    icon: ExpressIcon,
    name: "Express.js",
    size: 100,
    url: "https://expressjs.com/en/starter/installing.html",
  },
  {
    icon: NestIcon,
    name: "NestJS",
    url: "https://docs.nestjs.com/",
  },
  {
    icon: DjangoIcon,
    name: "Django",
    url: "https://docs.djangoproject.com/es/5.1/",
  },
  {
    icon: FastIcon,
    name: "FastAPI",
    url: "https://fastapi.tiangolo.com/#requirements",
  },
  {
    icon: LaravelIcon,
    name: "Laravel",
    url: "https://laravel.com/docs/11.x/readme",
  },
];
---

<div class="mt-[40px] mx-[20px] gap-[20px] grid grid-cols-2 grid-rows-1">
  {
    frameworks.map((framework) => (
      <article class="bg-[#202020] border border-[#505050] py-[20px] rounded-[10px] flex flex-col items-center justify-center">
        <a href={framework.url} target="_blank">
          <framework.icon size={framework?.size || 100} />
          <p class={` font-semibold text-[20px] mt-[20px] text-center`}>
            {framework.name}
          </p>
        </a>
      </article>
    ))
  }
</div>
