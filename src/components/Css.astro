---
import BootstrapIcon from "../assets/icons/BootstrapIcon.astro";
import PandaIcon from "../assets/icons/PandaIcon.astro";
import TailwindIcon from "../assets/icons/TailwindIcon.astro";
import WindiIcon from "../assets/icons/WindiIcon.astro";

const frameworks = [
  {
    icon: TailwindIcon,
    name: "TailwindCSS",
    size: 100,
    url: "https://tailwindcss.com/docs/installation",
  },
  {
    icon: PandaIcon,
    name: "PandaCSS",
    size: 90,
    url: "https://panda-css.com/docs/overview/getting-started",
  },
  {
    icon: BootstrapIcon,
    name: "Bootstrap",
    url: "https://getbootstrap.com/docs/4.1/getting-started/introduction/",
  },
];
---

<div class="mt-[40px] mx-[20px] gap-[20px] grid grid-cols-2 grid-rows-1">
  {
    frameworks.map((framework) => (
      <article class="bg-[#202020] border border-[#505050] py-[20px] rounded-[10px] flex flex-col items-center justify-center">
        <a href={framework.url} target="_blank">
          <framework.icon size={framework?.size || 100} />
          <p class={` font-semibold text-[20px] mt-[20px] text-center`}>
            {framework.name}
          </p>
        </a>
      </article>
    ))
  }
</div>
